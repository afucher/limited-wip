<idea-plugin>
    <id>LimitedWIP</id>
    <name>Limited WIP</name>
    <version>0.2.5</version>
    <vendor email="dmitry.kandalov [at] gmail.com">Dmitry Kandalov</vendor>
    <category>Misc</category>

    <!-- http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html -->
    <!-- Since IJ 2017.3 because it supports Kotlin 1.1. -->
    <idea-version since-build="173"/>

    <description>
        <![CDATA[<html lang="en"><body>
Plugin to limit the amount of changes you make at a time. It has two main features:
<ul>
    <li>show notifications when current changelist size exceeds limit</li>
    <li>automatically revert current changelist after a timeout</li>
</ul>
<br/>
See <a href="https://github.com/dkandalov/limited-wip">https://github.com/dkandalov/limited-wip</a> for details.
</body></html>
		]]>
    </description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.vcs</depends>

    <application-components>
        <component><implementation-class>limitedwip.common.TimerComponent</implementation-class></component>
        <component><implementation-class>limitedwip.watchdog.components.DisableLargeCommitsAppComponent</implementation-class></component>
        <component><implementation-class>limitedwip.limbo.components.DisableCommitWithoutRunningTestAppComponent</implementation-class></component>
    </application-components>

    <project-components>
        <component><implementation-class>limitedwip.watchdog.components.WatchdogComponent</implementation-class></component>
        <component><implementation-class>limitedwip.autorevert.components.AutoRevertComponent</implementation-class></component>
        <component><implementation-class>limitedwip.limbo.components.LimboComponent</implementation-class></component>
    </project-components>

    <actions>
        <action id="StartAutoRevert" class="limitedwip.autorevert.ui.StartOrStopAutoRevertAction" text="Start auto-revert"/>
        <action id="QuickCommitAction" class="limitedwip.autorevert.ui.QuickCommitAction" text="Quick commit"/>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable instance="limitedwip.common.settings.LimitedWipConfigurable"/>
        <applicationService serviceInterface="limitedwip.common.settings.LimitedWipSettings" serviceImplementation="limitedwip.common.settings.LimitedWipSettings"/>
        <checkinHandlerFactory implementation="limitedwip.common.LimitedWipCheckin"/>
    </extensions>

    <extensionPoints>
        <extensionPoint name="settingsListener" interface="limitedwip.common.settings.LimitedWipConfigurable$Listener"/>
        <extensionPoint name="checkinListener" interface="limitedwip.common.LimitedWipCheckin$Listener"/>
    </extensionPoints>
</idea-plugin>