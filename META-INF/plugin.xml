<idea-plugin version="2">
    <id>AutoRevert</id>
    <name>AutoRevert</name>
    <version>0.0</version>
    <vendor email="dmitry.kandalov [at] gmail.com">Dmitry Kandalov</vendor>
    <idea-version since-build="8000"/>

    <application-components>
        <component>
            <implementation-class>ru.autorevert.TimerEventsSource</implementation-class>
        </component>
    </application-components>

    <project-components>
        <component>
            <implementation-class>ru.autorevert.RevertComponent</implementation-class>
        </component>
    </project-components>

    <actions>
        <action id="StartAutoRevert" class="ru.autorevert.StartOrStopAutoRevert" text="Start auto-revert">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="alt c" second-keystroke="alt shift a"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
    </extensions>
</idea-plugin>